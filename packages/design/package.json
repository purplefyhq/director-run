{
  "name": "@workingco/design",
  "author": "working.dev",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run build --watch",
    "build": "tsup",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "test": "echo 'No tests yet for design package'"
  },
  "files": ["dist", "assets"],
  "exports": {
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js",
      "require": "./dist/lib/*.cjs"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.cjs"
    }
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@workingco/icons": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "motion": "^12.4.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.0.8"
  },
  "peerDependencies": {
    "react-dom": "^19.0.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.0",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "tsup": "^8.3.5",
    "typescript": "latest"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
