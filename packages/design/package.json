{
  "name": "@director.run/design",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check ./src",
    "lint:fix": "biome check ./src --write",
    "format": "bun run format:fix-classnames && bun run format:fix-all",
    "format:fix-all": "biome format --write ./src",
    "format:fix-classnames": "biome lint --fix --unsafe --only=lint/nursery/useSortedClasses ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.517.0",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-radix": "^4.0.2",
    "tw-animate-css": "^1.3.4",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@director.run/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3"
  },
  "exports": {
    "./globals.css": "./src/styles/globals.css",
    "./postcss.config": "./postcss.config.mjs",
    "./lib/*": "./src/lib/*.ts",
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts"
  }
}
