{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "node_modules",
      "test",
      "public",
      "dist",
      "db.test.json",
      "db.json",
      "*.css",
      "development/config.json",
      "db/seed/entries.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "complexity": {
        "noBannedTypes": "error",
        "noUselessTypeConstraint": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "off",
        "noPrecisionLoss": "error",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "off"
      },
      "style": {
        "noDefaultExport": "error",
        "noNamespace": "error",
        "noNonNullAssertion": "error",
        "useAsConstAssertion": "error",
        "useBlockStatements": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noExtraNonNullAssertion": "error",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error",
        "useAwait": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "options": {
            "attributes": ["className", "class"],
            "functions": ["cva", "cx", "cn", "classNames"]
          }
        }
      }
    }
  },
  "css": {
    "formatter": {
      "enabled": false
    },
    "linter": {
      "enabled": false
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "include": [
        "**/*.d.ts",
        "app/**/layout.tsx",
        "app/**/page.tsx",
        "app/**/route.ts",
        "app/**/loading.tsx",
        "app/**/error.tsx",
        "app/**/global-error.tsx",
        "app/**/global-not-found.tsx",
        "app/**/not-found.tsx",
        "*.config.*",
        "**/*.stories.ts",
        "**/*.stories.tsx",
        ".storybook/**/*"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
